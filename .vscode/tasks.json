{
// Consultez https://go.microsoft.com/fwlink/?LinkId=733558 
	// pour voir la documentation sur le format de tasks.json
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "meson",
			"mode": "build",
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["relative", "${workspaceRoot}/build"]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal":"always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "compile_cpp",
			"group": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "ninja",
			"args": [
				"../${relativeFile}^"
			],
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["relative", "${workspaceRoot}/build"]
			},
			"presentation": {
				"echo": true,
				"reveal":"always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}